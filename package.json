{
  "name": "ng-utils",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve sandbox --port=4400",
    "build": "npm run build:ui & npm run build:utils & npm run build:sandbox",
    "build:sandbox": "ng build sandbox",
    "build:ui": "ng build --configuration production common-ui",
    "build:utils": "ng build --configuration production ng-utils",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --check \"*.{json,md}\" \"projects/**/*.{js,json,md,scss,ts,yml,html}\"",
    "format:fix": "prettier --write \"*.{json,md}\" \"projects/**/*.{js,json,md,scss,ts,yml,html}\"",
    "test:sandbox": "jest --config ./projects/sandbox/jest.config.js",
    "test:ui": "jest --config ./projects/common-ui/jest.config.js",
    "test:utils": "jest --config ./projects/ng-utils/jest.config.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.0.3",
    "@angular/cdk": "^15.0.2",
    "@angular/common": "^15.0.3",
    "@angular/compiler": "^15.0.3",
    "@angular/core": "^15.0.3",
    "@angular/forms": "^15.0.3",
    "@angular/material": "^15.0.2",
    "@angular/platform-browser": "^15.0.3",
    "@angular/platform-browser-dynamic": "^15.0.3",
    "@angular/router": "^15.0.3",
    "@schematics/angular": "^14.2.10",
    "ngx-markdown": "^13.1.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^14.1.0",
    "@angular-builders/jest": "14.1.0",
    "@angular-devkit/build-angular": "^15.0.3",
    "@angular-eslint/builder": "14.1.0",
    "@angular-eslint/eslint-plugin": "14.1.0",
    "@angular-eslint/eslint-plugin-template": "14.1.0",
    "@angular-eslint/schematics": "14.1.0",
    "@angular-eslint/template-parser": "14.1.0",
    "@angular/cli": "^15.0.3",
    "@angular/compiler-cli": "^15.0.3",
    "@ngneat/spectator": "8.3.2",
    "@types/jest": "28.1.1",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "5.27.1",
    "@typescript-eslint/parser": "5.27.1",
    "eslint": "^8.17.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^4.3.6",
    "jest": "28.0.0",
    "jest-canvas-mock": "~2.3.1",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^11.1.2",
    "ng-packagr": "^15.0.3",
    "prettier": "^2.1.2",
    "raw-loader": "^4.0.2",
    "ts-node": "~7.0.0",
    "typescript": "~4.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,scss,yml,html}": "prettier --check",
    "*.ts": [
      "eslint",
      "prettier --check"
    ]
  }
}
