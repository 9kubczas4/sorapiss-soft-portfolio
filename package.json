{
  "name": "ng-utils",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve sandbox --port=4400",
    "build": "npm run build:ui & npm run build:utils & npm run build:sandbox",
    "build:sandbox": "ng build sandbox",
    "build:ui": "ng build --configuration production common-ui",
    "build:utils": "ng build --configuration production ng-utils",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --check \"*.{json,md}\" \"projects/**/*.{js,json,md,scss,ts,yml,html}\"",
    "format:fix": "prettier --write \"*.{json,md}\" \"projects/**/*.{js,json,md,scss,ts,yml,html}\"",
    "test:ui": "jest --config ./projects/common-ui/jest.config.js",
    "test:utils": "jest --config ./projects/ng-utils/jest.config.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.3.0",
    "@angular/common": "~13.3.0",
    "@angular/compiler": "~13.3.0",
    "@angular/core": "~13.3.0",
    "@angular/forms": "~13.3.0",
    "@angular/platform-browser": "~13.3.0",
    "@angular/platform-browser-dynamic": "~13.3.0",
    "@angular/router": "~13.3.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/jest": "13.0.3",
    "@angular-devkit/build-angular": "~13.3.9",
    "@angular/cli": "~13.3.1",
    "@angular/compiler-cli": "~13.3.0",
    "@ngneat/spectator": "8.3.2",
    "@types/node": "^12.11.1",
    "@types/jest": "27.4.1",
    "codelyzer": "^6.0.0",
    "jest": "27.5.1",
    "jest-canvas-mock": "~2.3.1",
    "husky": "^4.3.6",
    "lint-staged": "^11.1.2",
    "ng-packagr": "^13.0.0",
    "prettier": "^2.1.2",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "typescript": "~4.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,scss,yml,html}": "prettier --check",
    "*.ts": [
      "tslint",
      "prettier --check"
    ]
  }
}
